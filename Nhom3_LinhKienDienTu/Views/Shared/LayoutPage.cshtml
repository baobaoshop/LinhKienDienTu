            </li>
            <li class="header__nav-item nav-item">
                <a class="header__nav-link nav-link" href="@Url.Action("ShowAllProduct","Product")">
                    <img src="https://theme.hstatic.net/1000030244/1000943806/14/service_3.png?v=5565" alt="">
                    <span style="font-size:18px;">TẤT CẢ SẢN PHẨM</span>
                </a>
            </li>
            <li class="header__nav-item nav-item">
                <a class="header__nav-link nav-link " href="@Url.Action("TinTuc","Home")">
                    <img src="https://theme.hstatic.net/1000030244/1000943806/14/service_2.png?v=5565" alt="">
                    <span style="font-size:18px;">TIN TỨC</span>
                </a>
            </li>
            <li class="header__nav-item nav-item">
                <a class="header__nav-link nav-link " href="@Url.Action("AboutUs","Home")">
                    <img src="https://theme.hstatic.net/1000030244/1000943806/14/service_3.png?v=5565" alt="">
                    <span style="font-size:18px;">ABOUTUS</span>
                </a>
            </li>

            <li class="header__nav-item nav-item">
                <a class="header__nav-link nav-link" href="@Url.Action("ThongTinSinhVien", "Home")">
                    <img src="	https://theme.hstatic.net/1000030244/1000943806/14/service_1.png?v=5565" alt="">
                    <span style="font-size:18px;">THÔNG TIN SINH VIÊN</span>
                </a>
            </li>
        </ul>
    </div>

    <!--MainContent-->
    <div class="m-5 row">
        <div class="menu-product col-3">
            <div class="Group-item-menu">

                <div>
                    <ul class="list-group list-group-flush text-left">
                        @Html.Action("PartialNSX", "Product")
                    </ul>
                </div>
                <hr />
                <div>
                    <ul class="list-group list-group-flush text-left">
                        @Html.Action("PartialLoaiLK", "Product")
                    </ul>
                </div>
            </div>


        </div>
        <div class=" col-9" mg-3>
            @RenderBody()

        </div>

    </div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="height:500px" role="document">
            <div class="modal-content" style="height:500px">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Chi tiet san pham</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-5">
                            <div id="Product-HinhAnh" style="height:150px"></div>
                            <i>Hình ảnh minh họa</i>
                        </div>
                        <div class="col-7">
                            <div>
                                <p><i>Tên sản phẩm: </i></p>
                                <p class="text-primary" style="font-size:24px; font-weight:600;" id="Product-nAme">123</p>
                            </div>
                            <div>
                                <span><i>Kho: </i></span>
                                <span class="text-primary" style="font-size:16px; font-weight:600;" id="SoLuongTon">123</span>
                            </div>
                            <div>
                                <span><i>Giá tiền:   </i></span>
                                <span class="text-primary" id="GiaTien" style="font-size:24px; font-weight:600;">123</span>
                                <span class="text-primary" style="font-size:24px; font-weight:600;">VND</span>
                            </div>
                            <div>
                                <span><i>Năm sản xuất: </i></span>
                                <span class="text-primary" style="font-size:16px; font-weight:600;" id="NamSanXuat">123</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <a href="#" id="idhref" type="button" class="btn btn-primary">Thêm vào giỏ</a>
                </div>
            </div>
        </div>
    </div>


    <!-- Footer -->
    @RenderPage("~/Views/Shared/Footer.cshtml")
    <script src="~/Assets/Javascript/sub.js" type="text/javascript"></script>
