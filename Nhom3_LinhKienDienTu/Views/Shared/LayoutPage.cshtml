<body>

    <!-- Header -->
    @RenderPage("~/Views/Shared/Header.cshtml")
    <!--Menu-->
    <div class="header__nav">
        <ul class="header__nav-main nav nav-tabs">
            <li class="header__nav-item nav-item">
                <a class="header__nav-link nav-link" aria-current="page" href="@Url.Action("TrangChu","Home")">
