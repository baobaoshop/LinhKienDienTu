@model Nhom3_LinhKienDienTu.Models.UserModel.User
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

@using (Html.BeginForm())
{
    <div style="border:1px solid #000; margin: 104px auto; width:50%; height:50%; padding:10px ">
        <h2 style="text-align:center">Đăng Nhập</h2>
        <div class="row">
            <div class="col" style="margin-left: 10px;margin-right:10px">
                @Html.Label("sdt", "SDT", new { @class = "form-label", style = "padding-left:10px " })
                @Html.TextBox("sdt", "", new { @class = "form-control", Placeholder = "Enter your Phone", width = "50px" })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col" style="margin-left: 10px; margin-right:10px">
                @Html.Label("password", "PassWord", new { @class = "form-label", style = "padding-left:10px" })
                @Html.TextBox("password", "", new { @class = "form-control", Placeholder = "Enter Your Password", width = "50px" })
                @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row" style="margin-left: 20px">
            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="inlineFormCheck" />
                    <label class="form-check-lable" for="inlineFormCheck">
                        Remember Me
                    </label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12" style="text-align:center">
                <button type="submit" class="btn btn-primary">Đăng Nhập</button>
            </div>
        </div>

        <div class="row" style="margin-top:20px; text-align:center">
            <div class="col-12">
                <a href="@Url.Action("DangKy","User")" style=" text-decoration: none; list-style-type: none">Chưa Có Tài Khoản?</a>
            </div>
        </div>



        <div class="row">
            <div class="col-12" style="text-align:center">
                <p>@ViewBag.DangNhap</p>
            </div>
        </div>
    </div>
}
