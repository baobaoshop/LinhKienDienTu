@model Nhom3_LinhKienDienTu.Models.UserModel.User
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
@using (Html.BeginForm())
{
    <div style="border:1px solid #000; margin: 104px auto; width:50%; height:50%; padding:10px ">
        <h2 style="text-align:center">Đăng Ký</h2>
        <div class="row">
            <div class="col" style="margin-left: 10px;margin-right:10px">
                @Html.Label("sdt", "SDT", new { @class = "form-label", style = "padding-left:10px " })
                @Html.TextBox("sdt", "", new { @class = "form-control", Placeholder = "Enter your Phone", width = "50px" })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col" style="margin-left: 10px; margin-right:10px">
                @Html.Label("password", "PassWord", new { @class = "form-label", style = "padding-left:10px" })
                @Html.TextBox("password", "", new { @class = "form-control", Placeholder = "Enter Your Password", width = "50px" })
                @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <div class="col-12" style="text-align:center; margin:30px 10px 10px 10px">
                <button type="submit" class="btn btn-primary">Đăng Ký</button>
            </div>
        </div>

        <div class="row">
            <div class="col-12" style="text-align:center">
                <p>@ViewBag.DangKy</p>
            </div>
        </div>
    </div>
}
